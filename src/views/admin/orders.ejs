<%- include('../partials/header') %>

<div class="container" style="margin-top:30px;">
  <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:12px;">
    <h2>Orders (Total: <%= total %>)</h2>
    <a class="btn ghost" href="/admin/logout">Logout</a>
  </div>

  <div class="card">
    <table class="table">
      <thead>
        <tr><th>ID</th><th>User</th><th>Total</th><th>Status</th><th>Created</th><th>Action</th></tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><a href="/admin/orders/<%= order._id %>"><%= order._id %></a></td>
            <td><%= order.user?.email || 'â€”' %></td>
            <td>$<%= order.total %></td>
            <td><%= order.status %></td>
            <td><%= new Date(order.createdAt).toLocaleString() %></td>
            <td><a class="btn ghost" href="/admin/orders/<%= order._id %>">View</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div style="margin-top:12px;">
    <% if (page > 1) { %>
      <a class="btn ghost" href="?page=<%= page - 1 %>&limit=<%= limit %>">Prev</a>
    <% } %>
    <span style="margin:0 8px">Page <%= page %></span>
    <% if ((page * limit) < total) { %>
      <a class="btn ghost" href="?page=<%= page + 1 %>&limit=<%= limit %>">Next</a>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
