<%- include('../partials/header') %>

<div class="container" style="margin-top:18px;">
  <h2>Products</h2>
  <div class="grid" style="margin-top:12px;">
    <% products.forEach(p => { %>
      <div class="card">
        <img src="<%= p.image || '/uploads/placeholder.png' %>" alt="<%= p.name %>" />
        <h3><%= p.name %></h3>
        <p class="price">$<%= p.price %></p>
        <p><a class="btn" href="/api/products/<%= p._id %>">View</a></p> 
        <!-- If your product detail route is API and returns JSON, adjust link to frontend detail page or implement view -->
      </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/footer') %>
