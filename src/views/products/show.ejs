<%- include('../partials/header') %>

<div class="container" style="margin-top:18px;">
  <a href="/api/products" class="btn ghost">Back to products</a>

  <div class="card" style="margin-top:12px; display:flex; gap:20px;">
    <div style="flex:1;">
      <img src="<%= product.image || '/uploads/placeholder.png' %>" style="width:100%; height:auto; object-fit:cover" />
    </div>
    <div style="width:420px;">
      <h2><%= product.name %></h2>
      <p class="price">$<%= product.price %></p>
      <p><%= product.description %></p>
      <!-- add to cart form if you have cart logic -->
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
